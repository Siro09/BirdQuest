<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Dark Mode. -->
    <style name="Theme.BirdQuest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item> <!-- Lighter primary for dark mode -->

        <item name="colorOnPrimary">@color/black</item> <!-- Text on primary -->
        <!-- Secondary brand color. -->

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Custom theme attributes for Dark Mode -->
        <item name="colorSurfaceContainer">@color/surface_container</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorOutline">@color/outline</item>

        <!-- For MaterialCardView background in dark mode -->
        <item name="materialCardViewStyle">@style/Widget.App.MaterialCardView</item>
    </style>
</resources>